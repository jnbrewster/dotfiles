
set from = ""
set realname = ""

# Quick Settings
set my_server = mail.messagingengine.com
set my_user = xxxxxxxxxxxxxxxxxxx
set my_pass = xxxxxxxxxxxxxxxxxxx

# Account Information
set smtp_url = "smtp://$my_user:$my_pass@$my_server:587"
set smtp_pass = $my_pass
set imap_user = $my_user
set imap_pass = $my_pass

# Mailboxes
set folder = "imaps://$my_server:992"
set spoolfile = "="
set record = "=Sent Items"
set postponed = "=Drafts"
set trash = "=Trash"
mailboxes = "="

# Cache
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"

# Options
set index_format = "%3C %Z %[%b %d %R] %-18.18L (%4c) %s"
set imap_idle=yes
unset imap_passive
set timeout=15
set mail_check = 5
set imap_keepalive = 900
set sort = threads
set sort_browser=date
set sort_aux=reverse-last-date-received
set editor = "vim"
set pager_index_lines = 10
set pager_context = 5
unset markers
set delete=yes
set noconfirmappend
set edit_headers
unset mark_old
set pager_stop
set strict_threads = yes
set help=no

# Keyboard
bind index "^" imap-fetch-mail
bind compose p postpone-message
bind index p recall-message
bind pager <up> previous-line
bind pager <down> next-line
bind pager "[" half-up
bind pager "]" half-down

bind index     h   "display-toggle-weed"
bind pager     h   "display-toggle-weed"
bind attach    h   "display-toggle-weed"
bind compose   h   "display-toggle-weed"

# Opening links etc
macro index \cb |urlview 'call urlview to extract URLs out of a message'
macro pager \cb |urlview 'call urlview to extract URLs out of a message'

# HTML emails
auto_view text/html
alternative_order text/plain text/html

color normal  default default
color attachment yellow default
color hdrdefault blue default
color indicator brightblue default
color markers red default
color quoted  green default
color signature cyan default
color status  brightblue color234
color tilde blue default
color tree  red default
# color indicator brightwhite black

color index red black ~D
color index magenta black ~T

color header green default ^From:
color header cyan default ^To:
color header blue default ^Reply-To:
color header blue default ^Cc:
color header yellow default ^Subject:


color body red default [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+
# identifies email addresses

color body blue default (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+
# identifies URLs
