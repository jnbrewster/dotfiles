# Launch applications
# kwmc display -c vertical

kwmc bind cmd-return sys open -na ~/Applications/iTerm2.app
kwmc bind cmd+alt+ctrl-return sys open -na /Applications/Utilities/Terminal.app
kwmc bind cmd+alt+ctrl-a sys open -na ~/Applications/Atom.app
kwmc bind cmd+alt+ctrl-c sys open -na /Applications/Calendar.app
kwmc bind cmd+alt+ctrl-g sys open -na ~/Applications/GitHub\ Desktop.app
kwmc bind cmd+alt+ctrl-i sys open -na /Applications/iTunes.app
kwmc bind cmd+alt+ctrl-m sys open -na ~/Applications/MPlayerX.app
kwmc bind cmd+alt+ctrl-o sys open -na ~/Applications/Omnifocus.app
kwmc bind cmd+alt+ctrl-p sys open -na /Applications/Photos.app
kwmc bind cmd+alt+ctrl-s sys open -na /Applications/Safari.app
kwmc bind cmd+alt+ctrl-t sys open -na ~/Applications/iTerm2.app
kwmc bind cmd+alt+ctrl-v sys open -na ~/Applications/MacVim.app
kwmc bind cmd+alt+ctrl-n sys /usr/local/bin/cmus-remote --next
kwmc bind cmd+alt+ctrl-c sys /usr/local/bin/cmus-remote -u


# Personal settings from defaults

# Give Focus To Window
kwmc bind cmd+ctrl-h window -f west
kwmc bind cmd+ctrl-l window -f east
kwmc bind cmd+ctrl-j window -f south
kwmc bind cmd+ctrl-k window -f north

kwmc display -c vertical

kwmc bind cmd+ctrl-r tree -r 180


# Visual stuff

# Enable border for focused window
kwmc config focused-border on
kwmc config focused-border size 2
kwmc config focused-border color FFE3E3E3

# Enable border for marked window
kwmc config marked-border on
kwmc config marked-border size 2
kwmc config marked-border color FFCA6768

# Change border color when prefix-key is active
kwmc config prefix-border on
kwmc config prefix-border size 2
kwmc config prefix-border color FFEFC57A

